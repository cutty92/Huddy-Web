{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hardware-monitor-overlay.github.io/schema/sensor-definitions.schema.json",
  "title": "Hardware Monitor Sensor Definitions",
  "description": "Definitions for supported sensor IDs and their properties",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "sensors": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SensorDefinition"
      }
    }
  },
  "definitions": {
    "SensorDefinition": {
      "type": "object",
      "required": ["id", "name", "category", "unit", "range"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique sensor identifier"
        },
        "name": {
          "type": "string", 
          "description": "Human-readable sensor name"
        },
        "category": {
          "type": "string",
          "enum": ["CPU", "GPU", "Memory", "Network", "Storage", "Power", "Temperature", "Fan"]
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement"
        },
        "range": {
          "type": "object",
          "required": ["min", "max"],
          "properties": {
            "min": {
              "type": "number",
              "description": "Minimum expected value"
            },
            "max": {
              "type": "number", 
              "description": "Maximum expected value"
            }
          }
        },
        "description": {
          "type": "string",
          "description": "Detailed sensor description"
        },
        "thresholds": {
          "type": "array",
          "description": "Recommended warning/critical thresholds",
          "items": {
            "type": "object",
            "required": ["value", "level", "color"],
            "properties": {
              "value": {
                "type": "number",
                "description": "Threshold value"
              },
              "level": {
                "type": "string",
                "enum": ["warning", "critical", "info"]
              },
              "color": {
                "type": "string",
                "description": "Recommended color for this threshold"
              }
            }
          }
        }
      }
    }
  }
}
